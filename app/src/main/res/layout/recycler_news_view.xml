<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/NewsLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#20252627"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/news"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70000000"
            android:layout_gravity="bottom" >

            <TextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coronavirus outbreak | US researchers identify small molecules that can block COVID-19 - Moneycontrol"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPublishedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2020-06-13T15:58:15Z"
                android:layout_below="@+id/tvNewsTitle"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:gravity="end" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>